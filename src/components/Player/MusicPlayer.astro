---
import Controls from './MainControls'
import MusicInfo from './MusicInfo'
import SControls from "./SecondaryControls"
---

<div class='flex items-center justify-center h-full w-full'>
	<MusicInfo
		client:load
		transition:persist
		transition:name='music-player-info'
	/>
	<Controls
		client:load
		transition:persist
		transition:name='music-player-controls'
	/>
	<SControls
		client:load
		transition:persist
		transition:name='music-player-scontrols'
	/>
</div>
