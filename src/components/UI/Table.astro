---
import { format } from '@utils/format';
import type { Song } from 'src/data/songs'

interface Props {
	songs: Song[]
}

const { songs } = Astro.props
---

<table class='w-full border-separate border-spacing-y-1 rounded'>
	<thead class='text-sm text-foreground font-normal'>
		<tr>
			<th class='w-11'>#</th>
			<th class='w-[500px] text-left font-normal'>Título</th>
			<th class='w-80 text-left font-normal hidden lg:block'> Álbum</th>
			<th class='w-20 text-center font-normal'>Duración</th>
		</tr>
	</thead>
	<tbody class='text-foreground'>
		{
			songs.map((song, i) => (
				<tr class="hover:bg-neutral-800/50 transition duration-300 rounded">
					<th class='w-11 font-normal py-4 rounded-l-md'>{i + 1}</th>
					<th class='w-[500px] text-left font-normal '>
						<div class='flex gap-3 items-center '>
							<img
								src={song.thumbnail}
								alt=''
								class='w-10 h-10 rounded'
							/>
							<div class='flex flex-col '>
								<p class='text-sm text-white'>{song.title}</p>
								<p class='text-xs'>{song.authors.join(',')}</p>
							</div>
						</div>
					</th>
					<th class='w-80 h-10 text-left text-sm py-4 font-normal hidden lg:block'>
						{song.album}
					</th>
					<th class='w-20 text-center font-normal rounded-r-md'>{format(song.duration)}</th>
				</tr>
			))
		}
	</tbody>
</table>
