---
import type { Song } from 'src/data/songs'

interface Props {
	songs: Song[]
}

const { songs } = Astro.props
---

<table class='w-full table-auto border-separate border-spacing-y-3'>
	<thead class='text-sm text-foreground font-normal'>
		<tr>
			<th class='w-11'>#</th>
			<th class='w-[500px] text-left font-normal'>Título</th>
			<th class='w-80 text-left font-normal hidden lg:block'> Álbum</th>
			<th class='w-20 text-center font-normal'>Duración</th>
		</tr>
	</thead>
	<tbody class='text-foreground'>
		{
			songs.map((song, i) => (
				<tr>
					<th class='w-11 font-normal'>{i + 1}</th>
					<th class='w-[500px] text-left font-normal'>
						<div class='flex gap-3 items-center'>
							<img
								src={song.thumbnail}
								alt=''
								class='w-10 h-10 rounded'
							/>
							<div class='flex flex-col'>
								<p class='text-sm text-white'>{song.title}</p>
								<p class='text-xs'>{song.authors.join(',')}</p>
							</div>
						</div>
					</th>
					<th class='w-80 text-left text-xs font-normal hidden lg:block'>
						{song.album}
					</th>
					<th class='w-20 text-center font-normal '>{song.duration}</th>
				</tr>
			))
		}
	</tbody>
</table>
