---
import Song from './Song.astro'
import type { Song as SongType } from 'src/data/songs'

interface Props {
	title: string
	songs: SongType[]
}

const { title, songs } = Astro.props
---

<section class='px-4 py-5'>
	<h2 class='text-2xl font-bold text-white'>{title}</h2>
	<div class='grid grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 pt-5'>
		{songs.map((song) => <Song song={song} />)}
	</div>
</section>
