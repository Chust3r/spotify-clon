---
import Artist from './Artist.astro'
import type { Artists } from 'src/types/types'

interface Props {
	title: string
	artists: Artists
}

const { title, artists } = Astro.props
---

<section class='px-4 py-5'>
	<h2 class='text-2xl font-bold text-white'>{title}</h2>
	<div class='grid grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 pt-5'>
		{artists.map((artist) => <Artist artist={artist} />)}
	</div>
</section>
