---
import type{ Song } from 'src/types/types'
import PlaylistBtn from './PlaylistBtn'

interface Props {
	song: Song
}

const { song } = Astro.props

const { thumbnail, title, authors } = song
---

<div
	class='min-w-56 w-56 min-h-72 h-72 bg-[#181818] rounded-md overflow-hidden relative group z-[1] select-none'
>
	<div class='w-56 h-52 flex items-center justify-center'>
		<img src={thumbnail} alt={title} class='rounded w-48 h-44 object-cover' aria-hidden="true"/>
	</div>
	<div class='w-full h-20 px-5'>
		<p class='font-bold text-white line-clamp-2'>{title}</p>
		<span class='pr-3 text-sm font-light text-foreground line-clamp-2'
			>{authors.join(',')}</span
		>
		<PlaylistBtn
			songs={[song]}
			id={title}
			client:visible
			wrapperClasses='absolute bottom-0 right-0 m-6 w-12 h-12 mb-[105px] opacity-0 group-hover:opacity-100 transition-all duration-300'
		/>
	</div>
</div>
